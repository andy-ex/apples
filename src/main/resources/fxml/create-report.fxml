<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.ToggleGroup?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox minWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.Controller">

    <children>
        <RadioButton fx:id="apples" layoutX="91.0" layoutY="95.0" mnemonicParsing="false" text="Apples" onAction="#populate">
             <toggleGroup>
                <ToggleGroup fx:id="group" />
             </toggleGroup>
        </RadioButton>
        <RadioButton layoutX="92.0" layoutY="125.0" mnemonicParsing="false" text="Shops" toggleGroup="$group" onAction="#populate"/>
        <RadioButton layoutX="91.0" layoutY="156.0" mnemonicParsing="false" text="Dates" toggleGroup="$group" onAction="#populate"/>
        <ChoiceBox  fx:id="fixedDimensionChoiceBox" layoutX="91.0" layoutY="207.0" prefWidth="150.0" />
        <Hyperlink layoutX="91.0" layoutY="261.0" text="Selection details..." onAction="#showSelectionDetails"/>
        <VBox alignment="TOP_RIGHT">
            <children>
                <Button mnemonicParsing="false" text="Generate" onAction="#generate" />
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
</VBox>
